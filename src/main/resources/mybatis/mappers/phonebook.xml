<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">
	<!-- 리스트 -->
	<select id="selectList" resultType="com.javaex.vo.PersonVO">
		<![CDATA[
			select 	 person_id as personId
				    ,name
     			    ,hp
				    ,company
			from  	 person
			order by person_id desc
		]]>
	</select>


	<!-- 리스트 인원 -->
	<select id="selectOne" parameterType="com.javaex.vo.PersonVO" resultType="com.javaex.vo.PersonVO">
		<![CDATA[
			select  name
				   ,hp
				   ,company
			from 	person
			where 	person_id = #{personId}
		]]>
	</select>


	<!-- 등록 -->	
	<insert id="insert" parameterType="com.javaex.vo.PersonVO">
		<![CDATA[
			insert into person
			values (null, #{name}, #{hp}, #{company})
		]]>	
	</insert>
	
	
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from person
			where person_id = #{no}
		]]>		
	</delete>
	
	
	<!-- 수정 -->
	<update id="update" parameterType="com.javaex.vo.PersonVO">
		<![CDATA[
			update 	person
			set 	name = #{name}
				   ,hp = #{hp}
				   ,company = #{company}
			where 	person_id = #{personId}
		]]>		
	
	</update>
</mapper>
